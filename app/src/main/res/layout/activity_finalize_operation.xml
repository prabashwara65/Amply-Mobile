<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#F5F5F5">

    <!-- Heading -->
    <TextView
        android:id="@+id/tvFinalizeHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Booking Summary"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#1976D2"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp" />

    <!-- Summary Card -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="20dp"
            android:elevation="4dp">

            <!-- Section: Booking Information -->
            <TextView
                android:id="@+id/tvSectionBookingInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booking Information"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvSummaryBookingId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booking ID: BK-2024-10-001"
                android:textSize="16sp"
                android:textColor="#212121"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvSummaryOwner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer: John Doe"
                android:textSize="16sp"
                android:textColor="#212121"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvSummaryDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: October 7, 2025"
                android:textSize="16sp"
                android:textColor="#212121"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvSummaryTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time: 2:30 PM - 4:30 PM"
                android:textSize="16sp"
                android:textColor="#212121"
                android:layout_marginBottom="16dp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="16dp" />

            <!-- Section: Charging Details -->
            <TextView
                android:id="@+id/tvSectionChargingInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Charging Details"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvSummarySlot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Slot: A-05"
                android:textSize="16sp"
                android:textColor="#212121"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvSummaryDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration: 2 Hours"
                android:textSize="16sp"
                android:textColor="#212121"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvSummaryVehicle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vehicle: Tesla Model 3"
                android:textSize="16sp"
                android:textColor="#212121"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvSummaryChargeAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Energy Delivered: 45.5 kWh"
                android:textSize="16sp"
                android:textColor="#212121"
                android:layout_marginBottom="16dp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="16dp" />

            <!-- Section: Payment -->
            <TextView
                android:id="@+id/tvSectionPayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Summary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvSummaryTotalCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Cost: $22.75"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#388E3C"
                android:layout_marginBottom="8dp" />

        </LinearLayout>

    </ScrollView>

    <!-- Finalize Operation Button -->
    <Button
        android:id="@+id/btnFinalizeOperation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Finalize Operation"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#D32F2F"
        android:padding="16dp"
        android:layout_marginTop="24dp"
        android:drawableLeft="@android:drawable/ic_menu_save"
        android:drawablePadding="8dp" />

</LinearLayout>

