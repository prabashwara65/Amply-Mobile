<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/createReservation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingBottom="24dp">

            <!-- Title Section -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create New Reservation"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

            <!-- Card Container -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="#FFFFFF"
                android:layout_gravity="center"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Section 1: Personal Info -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘¤ Personal Information"
                        android:textColor="#222222"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <EditText
                        android:id="@+id/tvNIC"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="NIC Number"
                        android:textColorHint="@color/gray_500"
                        android:drawableStart="@drawable/outline_article_person_24"
                        android:drawablePadding="10dp"
                        android:background="@drawable/bg_input_rounded"
                        android:paddingHorizontal="14dp"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:layout_marginBottom="12dp" />

                    <EditText
                        android:id="@+id/tvFullName"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Full Name"
                        android:textColorHint="@color/gray_500"
                        android:drawableStart="@drawable/outline_account_circle_24"
                        android:drawablePadding="10dp"
                        android:background="@drawable/bg_input_rounded"
                        android:paddingHorizontal="14dp"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:layout_marginBottom="20dp" />

                    <!-- Section 2: Vehicle Info -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸš™ Vehicle Information"
                        android:textColor="#222222"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <EditText
                        android:id="@+id/tvVehicleNumber"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Vehicle Number"
                        android:textColorHint="@color/gray_500"
                        android:drawableStart="@drawable/outline_car_gear_24"
                        android:drawablePadding="10dp"
                        android:background="@drawable/bg_input_rounded"
                        android:paddingHorizontal="14dp"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:layout_marginBottom="20dp" />

                    <!-- Section 3: Station Info -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âš¡ Station Details"
                        android:textColor="#222222"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <EditText
                        android:id="@+id/tvStationName"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Station Name"
                        android:textColorHint="@color/gray_500"
                        android:drawableStart="@drawable/outline_add_home_work_24"
                        android:drawablePadding="10dp"
                        android:background="@drawable/bg_input_rounded"
                        android:paddingHorizontal="14dp"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:layout_marginBottom="12dp" />

                    <EditText
                        android:id="@+id/tvStationId"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Station ID"
                        android:textColorHint="@color/gray_500"
                        android:drawableStart="@drawable/outline_add_location_24"
                        android:drawablePadding="10dp"
                        android:background="@drawable/bg_input_rounded"
                        android:paddingHorizontal="14dp"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:layout_marginBottom="20dp" />

                    <!-- Section 4: Reservation Info -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“… Reservation Details"
                        android:textColor="#222222"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <EditText
                        android:id="@+id/tvReservationDate"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Select Reservation Date"
                        android:textColorHint="@color/gray_500"
                        android:drawableStart="@drawable/outline_calendar_month_24"
                        android:drawablePadding="10dp"
                        android:background="@drawable/bg_input_rounded"
                        android:paddingHorizontal="14dp"
                        android:focusable="false"
                        android:clickable="true"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:layout_marginBottom="12dp" />

                    <EditText
                        android:id="@+id/tvSlotNo"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Slot Number"
                        android:textColorHint="@color/gray_500"
                        android:drawableStart="@drawable/outline_bookmark_24"
                        android:drawablePadding="10dp"
                        android:background="@drawable/bg_input_rounded"
                        android:paddingHorizontal="14dp"
                        android:inputType="number"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:layout_marginBottom="12dp" />

                    <EditText
                        android:id="@+id/tvStartTime"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Start Time"
                        android:textColorHint="@color/gray_500"
                        android:drawableStart="@drawable/outline_av_timer_24"
                        android:drawablePadding="10dp"
                        android:background="@drawable/bg_input_rounded"
                        android:paddingHorizontal="14dp"
                        android:focusable="false"
                        android:clickable="true"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:layout_marginBottom="12dp" />

                    <EditText
                        android:id="@+id/tvEndTime"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="End Time"
                        android:textColorHint="@color/gray_500"
                        android:drawableStart="@drawable/outline_av_timer_24"
                        android:drawablePadding="10dp"
                        android:background="@drawable/bg_input_rounded"
                        android:paddingHorizontal="14dp"
                        android:focusable="false"
                        android:clickable="true"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:layout_marginBottom="24dp" />

                    <!-- Submit Button -->
                    <Button
                        android:id="@+id/btnSubmitReservation"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:text="Confirm Reservation"
                        android:textAllCaps="false"
                        android:textSize="17sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium"
                        android:backgroundTint="@color/black"
                        android:elevation="6dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
